
@{
    ViewBag.Title = "Filter Sales";
}

<div class="portlet box grey" style="border:1px solid #E5E5E5;">
    <div class="portlet-title">
        <div class="caption">
            @ViewBag.Title
        </div>
    </div>
    <div class="portlet-body form">
        <form action="@Url.Action("FilterSales","Report")" method="post" class="horizontal-form">
            <div class="form-body">
                <br>
                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">From Date</label>
                            <input type="date" class="form-control" name="FromDate" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">To Date</label>
                            <input type="date" class="form-control" name="ToDate" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Payment Types</label>
                            <select class="form-control" name="PaymentTypeId">
                                <option selected="selected" disabled>Option</option>
                                @foreach (var item in ViewBag.paytypes)
                                {
                                    <option value="@item.PaymentTypeId">@item.PaymentTypeName</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">SaleType</label>
                            <select class="form-control" name="SaleType">
                                <option selected="selected" disabled>Option</option>
                                @foreach (var item in ViewBag.saletypes)
                                {
                                    <option value="@item.SaleType">@item.SaleType</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Cashier</label>
                            <select class="form-control" name="UserId">
                                <option selected="selected" disabled>Option</option>
                                @foreach (var item in ViewBag.users)
                                {
                                    <option value="@item.UserId">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>


                </div>
            </div>

            <div class="form-actions left">
                <button type="submit" class="btn default blue-stripe"> Filter</button>
            </div>
        </form>
    </div>
</div>
