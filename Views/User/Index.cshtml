@model IEnumerable<BiselaWeb.Data.User>
@{
    ViewBag.Title = "Users";
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box grey" style="border:1px solid #E5E5E5;">
            <div class="portlet-title">
                <div class="caption">
                    @ViewBag.Title
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <br>
                        <div class="col-md-12">
                            <a href="@Url.Action("create", "User")" class="btn default green-stripe">
                                Add New
                            </a>
                        </div>
                    </div>
                </div>
                <hr>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>UserName</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model.ToList())
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="@Url.Action("Edit", "User", new { id = item.UserId })" class="btn btn-sm default green-stripe"><i class="fa fa-edit"></i></a>
                                            <a href="@Url.Action("Delete", "User", new { id = item.UserId })" class="btn btn-sm default red-stripe"><i class="fa fa-times-circle"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <Caption>No Data is found!</Caption>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

